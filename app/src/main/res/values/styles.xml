<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="general_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="general_style_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="end_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="header_first">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/header_first</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginLeft">@dimen/header_first_margin</item>
    </style>

    <style name="header_second">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/header_first</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/header_second</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="welcome_first">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/welcome_first</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/welcome_first_margin</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="artist_contest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/artist_contest</item>
    </style>

    <style name="artist_image">
        <item name="android:layout_width">@dimen/artist_image</item>
        <item name="android:layout_height">@dimen/artist_image</item>
    </style>

    <style name="artist_context_text">
        <item name="android:layout_width">@dimen/artist_image</item>
        <item name="android:layout_height">@dimen/artist_context_text</item>
    </style>

    <style name="artist_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/artist_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:layout_width">@dimen/button</item>
        <item name="android:layout_height">@dimen/button</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">@dimen/artist_context_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="welcome_two_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/artist_contest</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/welcome_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/welcome_two_margin</item>
        <item name="android:layout_marginBottom">@dimen/artist_context_text</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/artist_contest</item>
        <item name="android:paddingLeft">@dimen/title</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/welcome_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/welcome_two_margin</item>
    </style>

    <style name="title_work">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/artist_context_text</item>
        <item name="android:paddingLeft">@dimen/title</item>
        <item name="android:textColor">#080808</item>
        <item name="android:textSize">@dimen/welcome_first</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/welcome_two_margin</item>
    </style>

    <style name="work_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/work_image</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="title_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/artist_contest</item>
        <item name="android:layout_marginTop">@dimen/title_list</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/welcome_first</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/artist_context_text</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/welcome_first</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="explore_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/artist_context_text</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/welcome_first</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="album_image">
        <item name="android:layout_width">@dimen/album_image_w</item>
        <item name="android:layout_height">@dimen/album_image_h</item>
        <item name="android:layout_marginTop">@dimen/artist_context_text</item>
        <item name="android:layout_marginLeft">@dimen/welcome_two_margin</item>
        <item name="android:layout_marginRight">@dimen/welcome_two_margin</item>
    </style>

    <style name="welcome_three_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/welcome_three</item>
        <item name="android:textSize">@dimen/welcome_three_t</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/welcome_three_m</item>
        <item name="android:textColor">#080808</item>
    </style>

    <style name="media_player">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/media_player</item>
    </style>

    <style name="complete_work_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/artist_context_text</item>
        <item name="android:textSize">@dimen/complete_work_style</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/welcome_three_m</item>
    </style>

    <style name="download_link">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/welcome_three_t</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>list_image
        <item name="android:layout_marginTop">@dimen/download_link</item>
    </style>

    <style name="list_image">
        <item name="android:layout_width">@dimen/header_second</item>
        <item name="android:layout_height">@dimen/list_image</item>
    </style>

    <style name="list_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/welcome_two</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/artist_context_text</item>
    </style>

</resources>